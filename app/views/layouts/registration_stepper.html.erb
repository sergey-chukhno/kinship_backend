<!DOCTYPE html>
<html>
  <head>
    <%= favicon_link_tag "favicon.png" %>
    <%= render  "shared/meta_tags" %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= render "shared/css-cdn" %>
