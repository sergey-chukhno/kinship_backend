  <%= render "shared/navbar" if display_navbar? %>
  <div class="devise-container">
    <div class="left-side-container">
      <%= image_tag("sign-in-sign-up.png") %>
    </div>

    <div class="right-side-container">
      <%= yield %>
    </div>
  </div>
  </body>
</html>
